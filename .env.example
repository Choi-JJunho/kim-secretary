# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_WAKE_UP_CHANNEL_ID=C0XXXXXXXXX
SLACK_WORK_LOG_WEBHOOK_CHANNEL_ID=C0XXXXXXXXX
SLACK_WORK_LOG_REPORT_CHANNEL_ID=C0XXXXXXXXX
SLACK_REPORT_CHANNEL_ID=C0XXXXXXXXX

# Resume Feedback Channels
SLACK_RESUME_FEEDBACK_CHANNEL_ID=C0XXXXXXXXX  # 토스 이력서 평가 채널
CAFE24_RESUME_FEEDBACK_CHANNEL_ID=C0XXXXXXXXX  # 카페24 PM 이력서 평가 채널

# Notion Configuration
NOTION_API_KEY=ntn_your-notion-api-key
NOTION_WAKE_UP_DATABASE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# User Database Mapping (Slack User ID -> All Notion Database IDs)
# 하나의 매핑으로 모든 DB 관리
# Format:
# {
#   "USER_ID": {
#     "alias": "사용자이름",             # 별칭 (관리용, 선택)
#     "work_log_db": "DB_ID",           # 업무일지 DB (필수)
#     "weekly_report_db": "DB_ID",      # 주간 리포트 DB (선택)
#     "monthly_report_db": "DB_ID",     # 월간 리포트 DB (선택)
#     "resume_page": "PAGE_ID",         # 이력서 페이지 ID (선택, 이력서 기반 조언용)
#     "achievements_page": "PAGE_ID"    # 통합 성과 페이지 ID (선택, 성과 분석 결과 저장)
#   }
# }
NOTION_USER_DATABASE_MAPPING={"USERID":{"alias":"홍길동","work_log_db":"xxxxx","weekly_report_db":"xxxxx","monthly_report_db":"xxxxx","resume_page":"xxxxx","achievements_page":"xxxxx"}}

# AI Provider - Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-pro
GEMINI_TIMEOUT=5000

# AI Provider - Claude (optional, fallback when Gemini fails)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# GitHub Configuration (업무일지 자동 발행용)
GITHUB_TOKEN=ghp_your-github-token
GITHUB_REPO_URL=https://github.com/your-org/your-blog-repo.git
GIT_AUTHOR_NAME=Secretary Bot
GIT_AUTHOR_EMAIL=secretary@example.com

# Claude Code Configuration (포트폴리오 자동 업데이트용)
# Claude Code CLI가 설치되어 있어야 합니다 (npm install -g @anthropic/claude-code)
# 업무일지 발행 시 about/portfolio 페이지를 자동으로 업데이트합니다
CLAUDE_CODE_ENABLED=true
CLAUDE_CODE_TIMEOUT=300
JUNOGARDEN_REPO_PATH=/app/junogarden-web
